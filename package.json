{
	"name": "cpptips",
	"displayName": "cpptips",
	"description": "一款c++编程辅助工具，可直接基于protobuf建立索引，无需生成c++头文件。",
	"version": "0.1.24",
	"icon": "resources/cpp.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"publisher": "widyhu",
	"activationEvents": [
		"onLanguage:cpp",
		"onLanguage:c",
		"onLanguage:payprotobuf",
		"onLanguage:protobuf"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "c++语言插件",
			"properties": {
				"cpptips.needLoadLinkDir": {
					"type": "array",
					"default": [],
					"description": "默认情况下软连接不加载索引，加入需要加载的白名单中！"
				},
				"cpptips.needLoadDir": {
					"type": "array",
					"default": [],
					"description": "需要加载的目录，未配置进来将不会加载该目录，如果配置未空，则加载工程目录下全部文件！"
				},
				"cpptips.ignorDir": {
					"type": "array",
					"default": [],
					"description": "明确不创建索引的目录！needLoadDir配置需要加载，但是存在子目录不需要加载时，可以使用该配置项控制，非正则匹配"
				},
				"cpptips.ignoreFileAndDir": {
					"type": "array",
					"default": [
						"^[.~]{1,1}[.]{1,128}$",
						"^.*_tools_pb\\.(cpp|h)$",
						"^.*testimpl_pb\\.(cpp|h)$",
						"^.*\\.pb\\.(cc|h)$",
						"^(sk_|sm_)[a-z0-9_.]{1,128}$",
						"^mm3rd$",
						"^lib32$",
						"^lib64$",
						"^lib64_debug$",
						"^lib64_release$",
						"^lib32_debug$",
						"^lib32_release$",
						"^debug$",
						"^release$",
						"^win32$",
						"^bin$",
						"^\\.svn$",
						"^\\.git$",
						"^\\.vscode$"
					],
					"description": "需要忽略的文件的名称或者正则表达式，该规则叠加在最后，符合该规则的文件或者文件夹都将不加载"
				},
				"cpptips.updateCheckIntervalTime": {
					"type": "integer",
					"maximum": 2147483647,
					"default": 1800000,
					"description": "配置更新检查的间隔时间"
				},
				"cpptips.updateCheckUrl": {
					"type": "string",
					"default": "http://9.134.38.144:8888",
					"description": "配置更新检查时拉取的文件url地址"
				}
			}
		},
		"commands": [
			{
				"command": "cpp.changeType",
				"title": "驼峰式与下划线互切"
			},
			{
				"command": "cpp.appplatformtosvrkit",
				"title": "Appplatform切换Svrkit结构"
			},
			{
				"command": "cpp.transferToUpper",
				"title": "转换为大写"
			},
			{
				"command": "cpp.transferToLower",
				"title": "转换为小写"
			},
			{
				"command": "cpp.copyfilename",
				"title": "复制名称"
			},
			{
				"command": "cpp.addIndexDir",
				"title": "加入索引范围"
			},
			{
				"command": "cpp.delIndexDir",
				"title": "移除索引范围"
			},
			{
				"command": "cpp.reflushAllIdex",
				"title": "刷新全部索引"
			},
			{
				"command": "cpp.reflushOneIdex",
				"title": "重建该文件索引"
			},
			{
				"command": "cpp.build",
				"title": "提交编译"
			}
		],
		"languages": [
			{
				"id": "payprotobuf",
				"extensions": [
					".proto"
				],
				"aliases": [
					"proto"
				]
			},
			{
				"id": "cpp",
				"extensions": [
					".cpp",
					".c",
					".h"
				],
				"aliases": [
					"cpp",
					"Cpp",
					"c++"
				],
				"configuration": "./config/cpp-language-configuration.json"
			}
		],
		"colors": [
			{
				"id": "superstatus.cpptips",
				"description": "状态栏颜色.",
				"defaults": {
					"dark": "#e9b302ee",
					"light": "#e9b302ee",
					"highContrast": "#5100e6",
					"statusBarItem.activeBackground": "#00AA00"
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == cpp && editorHasSelection",
					"command": "cpp.appplatformtosvrkit",
					"alt": "cpp.appplatformtosvrkit",
					"group": "1_modification@5"
				},
				{
					"when": "resourceLangId == cpp && editorHasSelection",
					"command": "cpp.changeType",
					"alt": "cpp.changeType",
					"group": "1_modification@4"
				},
				{
					"when": "resourceLangId == cpp || resourceLangId == payprotobuf",
					"command": "cpp.reflushAllIdex",
					"alt": "cpp.reflushAllIdex",
					"group": "z_commands@2"
				},
				{
					"when": "resourceLangId == cpp && editorHasSelection",
					"command": "cpp.transferToLower",
					"alt": "cpp.transferToLower",
					"group": "1_modification@2"
				},
				{
					"when": "resourceLangId == cpp && editorHasSelection",
					"command": "cpp.transferToUpper",
					"alt": "cpp.transferToUpper",
					"group": "1_modification@3"
				},
				{
					"when": "resourceLangId == cpp || resourceLangId == payprotobuf",
					"command": "cpp.reflushOneIdex",
					"alt": "cpp.reflushOneIdex",
					"group": "z_commands@1"
				},
				{
					"when": "resourceLangId == cpp || resourceLangId == payprotobuf",
					"command": "cpp.build",
					"alt": "cpp.build",
					"group": "z_commands@1"
				}
			],
			"explorer/context": [
				{
					"when": "isMac",
					"command": "cpp.copyfilename",
					"alt": "cpp.copyfilename",
					"group": "6_copypath"
				},
				{
					"when": "resourceScheme == file && resourceExtname == ",
					"command": "cpp.addIndexDir",
					"alt": "cpp.addIndexDir",
					"group": "2_workspace@1"
				},
				{
					"when": "resourceScheme == file && resourceExtname == ",
					"command": "cpp.delIndexDir",
					"alt": "cpp.delIndexDir",
					"group": "2_workspace@2"
				},
				{
					"when": "true",
					"command": "cpp.reflushAllIdex",
					"alt": "cpp.reflushAllIdex",
					"group": "2_workspace@4"
				},
				{
					"when": "resourceLangId == cpp || resourceLangId == payprotobuf",
					"command": "cpp.reflushOneIdex",
					"alt": "cpp.reflushOneIdex",
					"group": "2_workspace@3"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "sh build.sh",
		"rebuild": "sh build.sh",
		"compile": "tsc -b",
		"watch": ""
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"tslint": "^5.16.0",
		"typescript": "^3.7.5",
		"npm-run-all": "^4.1.5"
	},
	"dependencies": {
		"@types/lodash": "^4.14.149",
		"better-sqlite3": "^6.0.1",
		"events": "^3.1.0",
		"unzipper": "^0.10.10",
		"electron-rebuild": "^1.10.0",
		"node-gyp": "^6.1.0"
	}
}
